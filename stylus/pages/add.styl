@import 'nib'

.b-har-viewer__add {

  &__mode {
    clearfix();
    width: 205px;
    height: 40px;
    margin: 0 auto;

    &__item {
      float: left;
      width: 100px;
      height: 40px;
      line-height: 40px;
      border: dotted 1px #ccc;
      text-align: center;
      cursor: pointer;

      &.selected {
        background-color: #eeeeee;
      }
    }
  }

    &__form {
      width: 400px;
      height: 60px;
      padding: 10px;
      margin: 10px auto;
      border: dotted 1px #ccc;

      &__url {

        &__input {
          width: 100%;
          height: 30px;
          line-height 30px;
          font-size: 20px;
          box-sizing: border-box;
        }

        &__button {
          width: 100px;
          height: 27px;
          margin-top: 5px;
          border: none;
          background-color: #926d49;
          color: #fff;
          cursor: pointer;
        }
      }

      &__file {
        &__input {
          display: block;
          margin: 20px auto;
        }
      }
    }
}